<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/rubik"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!--Styles such as primaryText, primaryContainer
    are declared in values/styles.xml-->
    <LinearLayout
        style="@style/primaryContainer"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:background="@drawable/primary_rounded_gray">
        <TextView
            style="@style/primaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KS2 Math Game"/>
    </LinearLayout>

    <LinearLayout
        style="@style/primaryContainer"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        android:background="@drawable/primary_rounded_gray">
        <Button
            style="@style/primaryButton"
            android:text="Story Mode"
            android:onClick="story_click"/>
        <Button
            style="@style/primaryButton"
            android:text="Challenge Mode"
            android:onClick="challenge_click"/>
        <Button
            style="@style/primaryButton"
            android:text="Multiplayer Mode"
            android:onClick="multiplayer_click"/>
        <Button
            style="@style/primaryButton"
            android:text="Character"
            android:onClick="character_click"/>
        <Button
            style="@style/primaryButton"
            android:text="Profile"
            android:onClick="profile_click"/>
    </LinearLayout>
</LinearLayout>